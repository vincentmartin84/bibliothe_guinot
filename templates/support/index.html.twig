{% extends 'base.html.twig' %}

{% block title %}Support index
{% endblock %}

{% block body %}

	<h1>Support</h1>

	<br>
	{%if app.user%}
		<a href="{{ path('app_support_new') }}" class="create-new">Create new</a>
		{%endif%}

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>

					{%if app.user%}
						<th>actions</th>
						{%endif%}</tr>
				</tr>
			</thead>
			<tbody>
				{% for support in supports %}
					<tr>
						<td>{{ support.id }}</td>
						<td>{{ support.title }}</td>

						{%if app.user%}
							<td>
								<a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
								<a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
							</td>
							{%endif%}
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</tbody>
		</table>

	{% endblock %}
